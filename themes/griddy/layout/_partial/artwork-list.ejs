<li>   
    <div class="work">
        <figure class="image has-shadow-hover has-rounded-corner">
            <a href="<%- config.root %><%- item.path %>">
                <img src="<%- item.cover_index || theme.default_cover_index %>" class="has-rounded-corner" alt="<%- item.title %>"/>
                <div class="caption has-rounded-corner">
                    <div class="work_title">
                        <h1 class="title is-6"><%- item.title || theme.default_post_title || "Untitled" %></h1>
                    </div>
                </div>
            </a>
        </figure>
    </div>
</li>
